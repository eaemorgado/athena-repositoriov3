<!DOCTYPE html>
<html lang="pt-br">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/header.css">
    <link rel="stylesheet" href="css/footer.css">
    <link rel="stylesheet" href="css/carrinholateral.css">

    <link rel="shortcut icon" href="img/logo-icon.png" type="image/x-icon">

    <title>Home - Athena Shop</title>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="js/home.js"></script>
    <script src="js/notify.js"></script>
</head>

<body>
    <% if(autenticado){ if(login){%>
        <script>
            notify("Login efetuado com sucesso", "Olá <%= autenticado%>", "success", "center")                        
        </script>
        <% } } %>

            <header>

                <a href="/">

                    <picture>

                        <source media="(max-width: 390px)" srcset="img/logo-icon.png">
                        <source media="(max-width: 479px)" srcset="img/logo-icon.png">
                        <img src="img/logo-letreiro.png" alt="logo-athena" class="logo-athena">

                    </picture>
                </a>

                <input type="search" name="" id="search-bar-header" placeholder="Pesquisar...">

                <!--<div class="menu-button" id="cart-icon">&#9776;</div>-->
                <i class='bx bx-cart' id="cart-icon"></i>

                <!--id="cart-icon"-->

                <a href="/usuario"><i class='bx bxs-user-circle' id="profile-user"></i></a>

                <div class="cart" id="cart">
                    <h2 class="cart-title">Carrinho</h2>
                    <div class="cart-content">
                        <div class="cart-box">
                            <img src="img/mochila1.webp" alt="" class="cart-img">
                            <div class="detail-box">
                                <div class="cart-product-title">Mochila preta</div>
                                <div class="cart-price">R$50</div>
                                <input type="number" name="" id="" value="1" class="cart-quantity">
                            </div>
                            <i class='bx bx-trash-alt cart-remove' id="cart-remove"></i>
                        </div>
                    </div>
                    <div class="total">
                        <div class="total-tilte">Total</div>
                        <div class="total-price">R$0</div>
                    </div>
                    <button type="button" class="btn-buy">Pagar agora</button>
                    <i class='bx bx-x delete-button' id="close-cart"></i>

                </div>

            </header>

            <!-- <nav id="v-menu">
                <ul>
                    <li id="active"><a href="#">Para Você</a></li>
                    <li><a href="#">Uniformes</a></li>
                    <li><a href="#">Materiais</a></li>
                    <li><a href="#">Mochilas</a></li>
                </ul>
            </nav> -->

            <main>


                <!--Produto-->
                <section class="shop container">
                    <h2 class="section-title">Produtos patrocinados</h2>
                    <!--Shop container-->
                    <div class="shop-content">
                        <% produtos.forEach(function(produto){ %>

                            <!--Box 1-->
                            <a href="/produto/<%=produto.id_produto%>">
                                <div class="product-box">
                                    <img src="<%= produto.img_produto %>" alt="" class="product-img">
                                    <h2 class="product-title">
                                        <%=produto.nome_produto %>
                                    </h2>
                                    <span class="price">R$ <%=produto.preco_produto%></span>
                                    <i class='bx bx-cart-add add-cart' style='color:#ffffff'></i>
                                </div>
                            </a>
                            <% }); %>
                    </div>
                </section>
                </section>
                <div class="img-hero-2">
                    <img src="img/asset2.png" alt="img">
                </div>

                <% if(paginador){ %>

                    <div class="notificador">
                        <ul>
                            <% for(var i=1; i <=paginador.total_paginas; i++){ if(paginador.pagina_atual==i){ %>
                                <li><a class="atual" href="?pagina=<%= i %>">
                                        <%= i %>
                                    </a></li>
                                <% } else { %>
                                    <li><a href="?pagina=<%= i %>">
                                            <%= i %>
                                        </a></li>
                                    <% } } %>
                        </ul>
                    </div>
                    <% } %>


            </main>

            <footer>

                <div class="footer-1">
                    <p><a href="" class="p4">Trabalhe conosco</a></p>
                    <p><a href="/politica">Politica de Privacidade</a></p>
                    <p><a href="/termos">Termos de Uso</a></p>
                </div>

                <div class="footer2">
                    <p><a href="/contato" class="p4">Contato</a></p>
                    <p><a href="" class="p4">Informações sobre seguro</a></p>
                    <p>
                        <a href="/adm">Administrador</a>
                    </p>
                </div>
            </footer>
            
            <script>
                const menuButton = document.getElementById("cart-icon");
                const sidebar = document.getElementById("cart");
                const closebar = document.getElementById("close-cart");

                menuButton.addEventListener("click", () => {
                    sidebar.classList.add("show");
                });

                closebar.addEventListener("click", () => {
                    sidebar.classList.remove("show");
                });



            </script>
</body>

</html>